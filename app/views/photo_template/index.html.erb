<h1>List of photos</h1>

<form action="/insert_photo">
  <label for="imgurl">Image</label>
  <input id="imgurl" type="text" name="url_of_img" placeholder="Enter the URL of the image...">

  <label for="imgcap">Caption</label>
  <textarea id="imgcap" type="text" name="cap_of_img" placeholder="Enter a caption for the photo..."></textarea>

  <label for="imgownid">Owner ID</label>
  <input id="imgownid" type="text" name="id_of_img_own" placeholder="Enter an ID of a User">

  <button>Add photo</button>
</form>


<hr>

<table border="1">

  <tr>
    <th> Image </th>
    <th> caption </th>
    <th> Owner </th>
    <th> Posted </th>
    <th></th>
  </tr> 

  <% @allphotos.each do |a_photo| %>
    <tr>
      <td> <img src="<%= a_photo.image %>"> </td>
      <td> <%= a_photo.caption %> </td>
      <td> <%= a_photo.poster.username %> </td>
      <td> <%= a_photo.created_at %> </td>
      <td> <a href="/photos/<%= a_photo.id %>"> show details </td>
    </tr> 


  <% end %>

</table>





